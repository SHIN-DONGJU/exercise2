<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestureActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/ButtonReplay"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginLeft="10dp"

                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="btn_replay"
                android:textColor="@color/colorPrimaryDark"
                android:text="다시 듣기"
                android:textSize="20sp"
                 />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ButtonReplay"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginLeft="60dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="btn_guide"
                android:textColor="@color/colorPrimaryDark"
                android:text="사용자 가이드"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소리 ON/OFF"
                android:textSize="20sp"
                ></TextView>

            <Switch
                android:id="@+id/switch1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="143dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gt_icon_left"
                    android:rotation="315"
                    android:paddingStart="15dp"
                    ></ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="143dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gt_icon_mic"></ImageView>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="118dp"
                android:layout_marginTop="160dp"
                android:text="음성"
                android:textSize="80sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="275dp">
                <com.google.android.material.card.MaterialCardView
                    style="@style/ThemeOverlay.MaterialComponents.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardForegroundColor="@color/colorPrimary"
                    >
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="143dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gt_icon_tx"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="143dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gt_icon_right"
                    android:rotation="315"
                    android:paddingEnd="15dp"
                    ></ImageView>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="118dp"
                android:layout_marginTop="300dp"

                android:text="채팅"
                android:textSize="80sp" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>